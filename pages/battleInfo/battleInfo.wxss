/* pages/battleInfo/battleInfo.wxss */ 
@import '../assembly/attrPlug/attrPlug.wxss';
.passFlag{
	position: absolute;
	
	right: 50px;
	
	top:50px;
	
	width:100px;
	
	height: 100px;
	
	z-index: 10000;
}

.battleInfoTitle{
	color: black;
	font-size: 40px;
	width: 100%;
	text-align: center;
}

.battleInfoBanner{
	width:80%;
	height:70px;
	margin:0 auto;
	text-align: center;
	background: url("http://7xugu1.com1.z0.glb.clouddn.com/banner.gif");
	background-size:100% 100%;
	padding-top: 28px;
	color: white;
	font-size: 25px;
	font-weight: bolder;
}

.battleInfoDetailImg{
	width:70px;
	height: 70px;
	margin: 0 auto;
	position: relative;
	display: block;

  background:red;
}

.battleInfoDetailName{
	color: black;
	font-size: 15px;
	margin: 0 auto;
	position: relative;
	display: block;
	text-align: center;
}


.battleInfo{
	/*background: url("http://on3s1z2us.bkt.clouddn.com/battle_background.jpg") no-repeat;*/
	width: 100%;
	min-height:100vh;
	background-size:100% 100%;
	padding-top: 5px;
}

.battleInfoContent{
	width:90%;
	margin: 0 auto;
	background: RGBA(159,132,120,0.4);
	position:relative;
	border-radius:20px;	
	padding-bottom: 20px;
	margin-top: 15px;

  padding-top:10px;
}

.battleInfoRound{
	margin: 0 auto;
	padding-left: 15px;

  margin-top:10px;
	
}


.battleInfoContentTitle{
	color: RGBA(199,159,142,1);
	font-size: 15px;
	padding-left: 10px;
	width:20%;
	display: inline-block;
}

.battleInfoContentInput{
	width:60%;
	height: 30px;
	background-color: RGBA(93,78,83,0.5);
	border-radius:15px;
	color: RGBA(254,235,157,1);
	font-size: 20px;
	
	padding-left: 10px;
	
	display: inline-block;

  padding-top:10px;
}

.battleInfoContentInputRankIcon{
	width:30px;
	height: 25px;
	background: url("http://on3s1z2us.bkt.clouddn.com/rank.png")no-repeat;
	background-size:70% 120%;
	display: inline-block;
}

.battleInfoContentInputBeanIcon{
	width:30px;
	height: 40px;
	background: url("/imgs/plug/bean.png")no-repeat;
	background-size:80% 90%;
	display: inline-block;
}

.battleInfoContentInputSportsIcon{
	width:30px;
	height: 20px;
	background: url("http://on3s1z2us.bkt.clouddn.com/sports.png")no-repeat;
	background-size:80% 100%;
	display: inline-block;
	background-position: 0px 0px;
}

.battleInfoContentInputText{
	vertical-align:top;
}


.mainViewButtons{
	text-align: center;
	width:100%;
	padding-top: 20px;
}
.mainViewDekornButton{
/*	background: url("http://onluguho9.bkt.clouddn.com/btn-blue2.png") no-repeat;*/
	background-color:green;
	border-radius:5px;
	width:20%;
	height: 40px;
	background-size:100% 40px;
	display: block;
	color: white;
	
	text-align: center;
	padding-top: 20px;
	
	font-weight: bolder;
	
	margin:1px;
	
	font-size: 15px;
}