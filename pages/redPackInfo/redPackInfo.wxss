@import '../assembly/attrPlug/attrPlug.wxss';
page{
  background:RGBA(216,78,67,0.9);
}
.redPacketInfo{
  width:100%;
  height:100vh;
  position: fixed;
  background:white;
}

.redPacketInfoHeader{
  width:800px;
  height:800px;
  top:-730px;
  left:50%;
  margin-left:-400px;
  border-radius: 1000px;
  background-color:RGBA(216,78,67,0.9);
  position: absolute;
}

.redPacketInfoHeaderImg{
  width:50px;
  height:50px;
  z-index: 1000;
  position: absolute;
  left:50%;
  top:30px;
  margin-left:-25px;
  border-radius: 5px;
}

.redPacketInfoContent{
  background:rgba(241,241,241,1);
  text-align: center;

  padding-bottom:10px;
}

.redPacketInfoContentNickname{
  padding-top:90px;
}

.redPacketInfoContentMoney{
  padding-top:10px;
}

.redPacketInfoContentMoneyAmount{
  font-size:40px;
  font-weight: bolder;
}

.redPacketInfoList{
  background:white;
}

.redPacketInfoListInfo{
   font-size:15px;
   padding-left:10px;
   padding-top:10px;
   padding-bottom:10px;
   border:1px solid rgba(241,241,241,1);
   background:white;
}

.redPacketInfoItem{
  padding-left:10px;
  padding-top:10px;
  padding-bottom:5px;
  border-bottom:1px solid rgba(241,241,241,1);
}

.redPacketInfoItemImg{
  width:50px;
  height:50px;
  border-radius:5px;
}

.redPacketInfoItemUser{
  display:inline-block;
  vertical-align: top;
  padding-left:10px;
}

.redPacketInfoItemUserNickname{
  font-size:20px;
}

.redPacketInfoItemUserTime{
  font-size:10px;
}

.redPacketInfoItemAmount{
  display: inline-block;
  vertical-align: top;
  position: absolute;
  right:10px;
  text-align: right;
}