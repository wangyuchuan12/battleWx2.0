@import '../assembly/baseLayerout/baseLayerout.wxss';
@import '../assembly/attrPlug/attrPlug.wxss';
.battleDekorn{
  width:100%;
  height: 100vh;
  background: url('http://ovqk5bop3.bkt.clouddn.com/ed71d7e8a0474a723d5baebbf76c9221.png');
  background-size: 100% 100%;
  text-align: center;
  position: relative;
}

.battleDekornRewards{
  width:70%;
  background: rgba(251,242,213,0.3);
  margin: 0 auto;
  position: relative;
  border-radius: 10px;
  padding-top:20px;
  padding-bottom:20px;
}

.battleDekornRewardItem{
  color: rgba(101,52,11,1);
  font-size: 15px;
  font-weight: bolder;
}

.battleDekornPrompt{
  position: relative;
}

.battleDekornPrompt{
  padding-top:30px;
  color: rgba(252,255,187,1);
  font-size: 15px;
  font-weight: bolder;
}

.battleDekornButton{
  padding-left:40px;
  padding-right: 40px;
  padding-top:15px;
  padding-bottom: 15px;
  background: rgba(0,113,189,1);
  display: inline-block;
  color: white;
  border-radius: 20px;
  margin-top:40px;
}

.battleDekornContent{
  padding-top:50px;
}

.battleDekornTitle{
  color: rgba(254,255,153,1);
  font-size: 40px;
  margin-bottom: 20px;
}