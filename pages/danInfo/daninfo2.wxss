@import '../danList/danList.wxss';
@import '../battleHome/battleHome2.wxss';
@import '../assembly/attrPlug/attrPlug.wxss';
@import 'danInfo.wxss';

.danInfoMember{
  width:20%;
  height:70px;
  display:inline-block;
  margin: 10px;
}

.danInfoMemberImg{
  width:100%;
  height:100%;
  border-radius:10px;
  display: inline-block;
}

.danInfoMemberVsImg{
  display: inline-block;
  width:100px;
  height:100px;
}

.danInfoReward{
  text-align: center;
  position: relative;
}

.danInfoRewardBanner{
  width:90%;
  height:60px;
  background: url('http://7xugu1.com1.z0.glb.clouddn.com/banner.gif');
  background-size:100% 100%;
  margin: 0 auto;
  color: rgba(251,247,150,1);
  line-height: 60px;
  font-size:20px;
}

.danInfoRewardContent{
  width:80%;
  max-height:200px;
  margin: 0 auto;
  position: relative;
  padding-top:5px;
  margin-top:20px;
  border-radius:20px;
}
.danInfoRewardContentItem{
  color: rgba(251,247,150,1);
  margin: 0 auto;
  position: relative;
  width:80%;
  margin-top:10px;
  border-radius:5px;
}

.danInfoRewardTitle{
  color: rgba(251,247,150,1);
  font-size:20px;
}

.danInfoMembers{
  padding-left:50px;
  padding-right:50px;

  text-align: center;
}

.danInfo{
  position: relative;
}

.danInfoButton{
  width:80%;
  text-align: center;
  padding-top:10px;
  padding-bottom:10px;
  position: relative;
  background:white;
  border-radius:10px;
  display:block;
  margin: 0 auto;
  color: white;
  background:green;

  margin-top:20px;
  margin-bottom:20px;
}

.danInfoRewardWait{
  color: red;
  margin: 0 auto;
  position: relative;
  text-align: center;
  padding-top:20px;
}